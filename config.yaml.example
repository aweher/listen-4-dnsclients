# Configuración del servidor Redis
redis:
  host: localhost
  port: 6379
  db: 0
  password: null  # Configurar contraseña si es necesario (ejemplo: "mi_password")

# Configuración del servidor ClickHouse
clickhouse:
  host: localhost
  port: 9000  # Puerto nativo de ClickHouse
  database: dns_monitor
  user: default
  password: null  # Configurar contraseña si es necesario (ejemplo: "mi_password")

# Configuración del sniffer DNS
sniffer:
  interface: null  # null = todas las interfaces
  filter: "port 53"  # Filtro BPF para captura

# Configuración de autenticación del dashboard
auth:
  users:
    - username: admin
      password: admin123  # Cambiar en producción
    # Agregar más usuarios aquí:
